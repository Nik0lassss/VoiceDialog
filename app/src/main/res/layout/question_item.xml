<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/question_item_color">

    <TextView
        android:id="@+id/question_item_textview_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/question_item_textview_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/question_fragment_item_image_view_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <VideoView
        android:id="@+id/question_fragment_item_web_view"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:visibility="gone"/>

</LinearLayout>
